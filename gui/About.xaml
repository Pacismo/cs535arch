<Window x:Class="gui.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gui"
        mc:Ignorable="d"
        Title="About" 
        Height="150" Width="400"
        ResizeMode="NoResize"
        Icon="pack://application:,,,/Resources/AppIcon.ico">
    <Grid>
        <Image Source="pack://application:,,,/Resources/AppIcon.ico" 
               Width="20" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Bottom" 
               Margin="10,0,0,10"/>
        <TextBlock Margin="10,10,10,35" TextWrapping="Wrap">
            This is a graphical frontend for the SEIS simulation software providing details about the 
            runtime in a user-friendly way.<LineBreak/>
        </TextBlock>
        <TextBlock Margin="35,0,0,12" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            ©2024 Francisco Santana-Pardo
        </TextBlock>
    </Grid>
</Window>
